                            <TextBlock Text="Guardian credits:" FontSize="14" FontWeight="Thin" Margin="55 0 0 0" Opacity=".7" VerticalAlignment="Center"></TextBlock>
                            <TextBlock Text="{Binding TotalGuardianCredits}" FontSize="14" FontWeight="Normal" Margin="10 0 0 0" Width="60" VerticalAlignment="Center"></TextBlock>

                            <TextBlock Text="Marks:" FontSize="14" FontWeight="Thin" Margin="185 0 0 0" Opacity=".7" VerticalAlignment="Center"></TextBlock>
